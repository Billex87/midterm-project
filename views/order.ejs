          // console.log(page);
          $('.gallery-page').addClass('hidden');
          $('.gallery-page-' + page).removeClass('hidden').fadeTo("slow");
          console.log('#gallery-page-' + page)
          $('.paging-link').removeClass('active');
          $(this).addClass("active");
        });
      }

